                max = max(hero_winrate$Game.Date),\n                              animate = T,\n                              value = min(hero_winrate$Game.Date)),\n                  style = wellpanelstype)\n        \n      ),\n      conditionalPanel(\n        condition = \"input.HotsSelectInput == 'Game duration'\",\n        wellPanel(selectInput('SelectMap',\n                              'Choose map',\n                              choices = array(sapply(map_names, function(x) gsub(\".png\", '', x)))),\n                  selectInput('SelectMap2',\n                              'Compare to:',\n                              choices = array(sapply(map_names, function(x) gsub(\".png\", '', x))),\n                              selected = array(sapply(map_names, function(x) gsub(\".png\", '', x)))[2]),\n                  style = wellpanelstype)\n        \n        \n      ),\n      width = 3)\n  ),\n  fluidRow(\n    \n    plotOutput('hotsplot'),\n    column(\n      imageOutput('imagespace1'),\n      width = 6),\n    column(\n      imageOutput('imagespace2'),\n      width = 6)\n    \n  )\n  \n  \n))",
